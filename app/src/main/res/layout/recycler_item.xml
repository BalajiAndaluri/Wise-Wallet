<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/HeadLayout"
        android:weightSum="2">

        <TextView
            android:id="@+id/entryDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textStyle="bold"
            android:paddingStart="5dip"
            android:text="6 JAN Monday"
            android:textColor="@color/pink"
            android:textSize="15dip" />

        <TextView
            android:id="@+id/entryCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingStart="5dip"
            android:paddingEnd="5dip"
            android:textColor="@color/green"
            android:text="Income"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="100dip"
        android:id="@+id/recCard"
        app:cardCornerRadius="10dip"
        app:cardElevation="4dip"
        app:cardUseCompatPadding="true">

        <LinearLayout
            android:id="@+id/cardLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/entryImage"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.5"
                android:src="@drawable/baseline_currency_rupee_24" />

            <TextView
                android:id="@+id/entryDesc"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="5dip"
                android:text="Salary"
                android:textColor="@color/black"
                android:layout_weight="1.5"
                android:paddingTop="22dip"
                android:textStyle="bold"
                android:textSize="25dip" />

            <TextView
                android:id="@+id/entryAmount"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:paddingStart="10dip"
                android:paddingTop="22dip"
                android:layout_weight="1"
                android:paddingBottom="22dip"
                android:text="75000"
                android:textColor="@color/green"
                android:textSize="25dip"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>

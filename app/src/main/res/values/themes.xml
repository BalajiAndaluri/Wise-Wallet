<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.WiseWallet" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">#498A8A</item>
        <item name="colorPrimaryVariant">@color/matt_green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink</item>
        <item name="colorSecondaryVariant">@color/pink</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="SplashTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="android:windowBackground">@drawable/ic_launcher_background</item>
        <item name="android:statusBarColor">@color/matt_green</item>
    </style>
    <style name="Theme.WiseWallet" parent="Base.Theme.WiseWallet" />
</resources>